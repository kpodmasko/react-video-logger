{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@root/*": ["src/*"],
      "@hooks/*": ["src/hooks/*"],
      "@components/*": ["src/components/*"],
      "@actions/*": ["src/redux/actions/*"],
      "@reducers/*": ["src/redux/reducers/*"],
      "@sagas/*": ["src/redux/sagas/*"],
      "@store/*": ["src/redux/store/*"],
      "@utils/*": ["src/utils/*"],
      "@declarations/*": ["src/declarations/*"]
    },
    "jsx": "react",
    "types": [ "jest", "node", "react", "react-dom" ],
    "esModuleInterop": true
  }
}